{
    "name": "Abfallkalender",
    "author": "Ringo Rohe",
    "template": "<style>\n  .box-content {\n  \tbackground-color: {{config.backgroundColor}};\n  }\n  .template-contents {\n  \theight: 100%;\n    display: flex;\n    flex-direction: column;\n    align-items: center;\n\t  justify-content: center;\n  }\n  .title {\n  \tmargin-bottom: 1rem;\n  \tfont-size: {{config.titleSize}}pt;\n  \tcolor: {{config.titleColor}}\n  }\n\t.trash-container {\n  \tdisplay: flex;\n  \tflex-direction: row;\n  \talign-items: center;\n\t  justify-content: center;\n  }\n  .trash-icon {\n  \tpadding: 2rem;\n  }\n  .trash-icon img {\n  \twidth: {{config.iconSize}}px;\n  \tmax-width: 100%;\n  \tmax-height: 100%;\n  \tobject-fit: cover;\n  }\n  .trash-list {\n  \tpadding: 0;\n  }\n  .trash-item {\n  \ttext-align: left;\n  \tmargin: 0.5rem 0;\n  }\n  .trash-item-label {\n  \tdisplay: block;\n  \tfont-size: {{config.itemLabelSize}}pt;\n  \tcolor: {{config.itemLabelColor}};\n  }\n  .trash-item-value {\n  \tfont-size: {{config.itemValueSize}}pt;\n  \tcolor: {{config.itemValueColor}};\n  }\n</style>\n\n<div class=\"title\" ng-if=\"config.title\">{{config.title}}</div>\n<div class=\"trash-container\">\n\t<div class=\"trash-icon\" ng-if=\"config.iconUrl\">\n  \t<img src=\"{{config.iconUrl}}\" />\n  </div>\n  <div class=\"trash-content\" ng-if=\"config.itemGroup\">\n    <ul class=\"trash-list\">\n      <li ng-repeat=\"item in itemsInGroup(config.itemGroup)\" class=\"trash-item\">\n        <span class=\"trash-item-label\">{{item.label}}</span>\n        <span class=\"trash-item-value\">{{itemState(item.name) | date}}</span>\n      </li>\n    </ul>\n  </div>\n</div>\n",
    "id": "Abfallkalender",
    "settings": [
        {
            "id": "itemGroup",
            "label": "Item Group",
            "description": "The Item Group to list",
            "type": "item"
        },
        {
            "id": "title",
            "label": "Title",
            "default": "Abfallkalender",
            "type": "string"
        },
        {
            "id": "titleSize",
            "label": "Title Font Size",
            "default": "32",
            "type": "string"
        },
        {
            "id": "titleColor",
            "label": "Title Color",
            "default": "",
            "type": "color"
        },
        {
            "id": "iconUrl",
            "label": "Icon URL",
            "type": "string"
        },
        {
            "id": "iconSize",
            "label": "Icon Width (px)",
            "type": "number"
        },
        {
            "id": "itemLabelSize",
            "label": "Item Label Size",
            "default": "18",
            "type": "number"
        },
        {
            "id": "itemLabelColor",
            "label": "Item Label Color",
            "default": "#cccccc",
            "type": "color"
        },
        {
            "id": "itemValueSize",
            "label": "Item Value Size",
            "default": "36",
            "type": "number"
        },
        {
            "id": "itemValueColor",
            "label": "Item Value Color",
            "default": "#ffffff",
            "type": "color"
        },
        {
            "id": "backgroundColor",
            "label": "Background Color",
            "default": "transparent",
            "type": "color"
        }
    ]
}